<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/child1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/anddevimg"
                        android:layout_width="135dp"
                        android:layout_height="130dp"
                        android:src="@drawable/androidlogo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/anddev_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="ANDROID" />

                <TextView
                    android:id="@+id/anddev_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DEVELOPMENT" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/child2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/iosdevimg"
                        android:layout_width="135dp"
                        android:layout_height="130dp"
                        android:src="@drawable/apple" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/iosdev_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="IOS" />

                <TextView
                    android:id="@+id/iosdev_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DEVELOPMENT" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/child3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="60dp">

                    <ImageView
                        android:id="@+id/ai_devimg"
                        android:layout_width="135dp"
                        android:layout_height="130dp"
                        android:src="@drawable/ai" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/ai_devi_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="ARTIFICIAL" />

                <TextView
                    android:id="@+id/ai_devi_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="INTELLIGENCE" />

            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/child4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="60dp"
                    >

                    <ImageView
                        android:id="@+id/webdev_img"
                        android:layout_width="135dp"
                        android:layout_height="130dp"
                        android:src="@drawable/wwwlogo" />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/webdev_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="WEBSITE" />
                <TextView
                    android:id="@+id/webdev_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DEVELOPMENT" />

            </LinearLayout>
            <LinearLayout
            android:id="@+id/child5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                >

                <ImageView
                    android:id="@+id/devops_img"
                    android:layout_width="135dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="130dp"
                    android:src="@drawable/devops" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/devops_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="38dp"
                android:layout_gravity="bottom"
                android:text="DEVOPS" />

        </LinearLayout><LinearLayout
            android:id="@+id/child6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="60dp"
                >

                <ImageView
                    android:id="@+id/ml_dev_img"
                    android:layout_width="135dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ml" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/ml_devi_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="MACHINE" />
            <TextView
                android:id="@+id/ml_devi_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LEARNING" />

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Contact" />
</LinearLayout>